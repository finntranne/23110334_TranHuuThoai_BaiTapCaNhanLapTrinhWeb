package vn.iostar.Connection;

import java.sql.Connection;
import java.sql.DriverManager;


public class DBConnection {

	private final String serverName = "FINNTRAN"; // TÃªn server SQL
	private final String dbName = "KNCSDL"; // TÃªn database
	private final String portNumber = "1433"; // Port máº·c Ä‘á»‹nh SQL Server
	private final String instance = ""; // Náº¿u cÃ³ instance: "SQLEXPRESS"
	private final String userID = "sa"; // TÃ i khoáº£n SQL Server
	private final String password = "123456"; // Máº­t kháº©u SQL Server

	public Connection getConnection() throws Exception {
		String url = "jdbc:sqlserver://" + serverName + "\\" + instance + ":" + portNumber + ";databaseName=" + dbName
				+ ";encrypt=true;trustServerCertificate=true"; // ðŸ‘ˆ ThÃªm dÃ²ng nÃ y

		if (instance == null || instance.trim().isEmpty()) {
			url = "jdbc:sqlserver://" + serverName + ":" + portNumber + ";databaseName=" + dbName
					+ ";encrypt=true;trustServerCertificate=true"; // ðŸ‘ˆ ThÃªm dÃ²ng nÃ y
		}

		Class.forName("com.microsoft.sqlserver.jdbc.SQLServerDriver");
		return DriverManager.getConnection(url, userID, password);
	}

	public static void main(String[] args) {
	        try {
	            Connection conn = new DBConnection().getConnection();
	            if (conn != null) {
	                System.out.println("âœ… Káº¿t ná»‘i SQL Server thÃ nh cÃ´ng báº±ng SQL Authentication!");
	            }
	        } catch (Exception e) {
	            e.printStackTrace();
	        }
	}

}
