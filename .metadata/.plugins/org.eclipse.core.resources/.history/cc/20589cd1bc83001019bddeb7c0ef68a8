package CSDL;

import java.sql.Connection;
import java.sql.DriverManager;

public class connect {
    private final String serverName = "FINNTRAN\\MSSQLSERVER01";       // hoặc "localhost"
    private final String dbName = "KNCSDL";
    private final String portNumber = "1433";
    private final String instance = "";          // ví dụ "SQLEXPRESS", nếu mặc định thì để trống

    public Connection getConnectionW() throws Exception {
        String url;
        if (instance == null || instance.trim().isEmpty()) {
            url = "jdbc:sqlserver://" + serverName + ":" + portNumber
                    + ";databaseName=" + dbName
                    + ";integratedSecurity=true";
        } else {
            url = "jdbc:sqlserver://" + serverName + "\\" + instance + ":" + portNumber
                    + ";databaseName=" + dbName
                    + ";integratedSecurity=true";
        }
        Class.forName("com.microsoft.sqlserver.jdbc.SQLServerDriver");
        return DriverManager.getConnection(url);
    }

    public static void main(String[] args) {
        try {
            Connection conn = new connect().getConnectionW();
            if (conn != null) {
                System.out.println("✅ Kết nối SQL Server thành công bằng Windows Authentication!");
            }
        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}
